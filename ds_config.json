{
    "train_batch_size": 16,
    "gradient_accumulation_steps": 1,
    "optimizer": {
      "type": "AdamW",
      "params": {
        "lr": 1e-6,
        "betas": [0.9, 0.999],
        "eps": 1e-8
      }
    },
    "fp16": {
      "enabled": true
    },
    "zero_optimization": {
      "stage": 2,
      "allgather_partitions": true,
      "allgather_bucket_size": 2e8,
      "overlap_comm": true,
      "reduce_scatter": true,
      "reduce_bucket_size": 2e8,
      "contiguous_gradients": true
    }
  }